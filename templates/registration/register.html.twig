{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<style>
		/* Changer la couleur du texte en blanc */
		h1,
		p,
		form, fieldset {
			color: white;
		}
    </style>
	<a class="navbar-brand" href="{{ path('Home') }}">
        <img src="{{ asset('images/logo1.png') }}" alt="Mon Logo">
    </a>
	<section class="container">
		<div class="row">
			<div class="col">
				<h1>Inscription</h1>

				{{ form_errors(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend>Mon Identité</legend>
                        {{ form_row(registrationForm.last_name) }}
                        {{ form_row(registrationForm.firstname) }}
                        {{ form_row(registrationForm.email) }}
                    </fieldset>
                    <fieldset class="mb-3">
                        <legend>Mes Coordonnées</legend>
                        {{ form_row(registrationForm.address) }}
                        {{ form_row(registrationForm.phone_number) }}
                    </fieldset>

				{{ form_start(registrationForm) }}
				
				{{ form_row(registrationForm.plainPassword, {
                    label: 'Mot de passe'}
                ) }}
				{{ form_row(registrationForm.rgpdConsent) }}
                    <p class="mt-3">
						<a class="link-opacity-25-hover" href="/#">Payer</a>
					</p>
				    <button type="submit" class="btn btn-primary btn-lg my-3">S'incrire</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>
{% endblock %}
